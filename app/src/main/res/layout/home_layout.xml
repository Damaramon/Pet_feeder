<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:showDividers="middle">

    <ImageView
        android:id="@+id/icon_profil"
        android:layout_marginRight="10dp"
        android:layout_width="35dp"
        android:layout_height="25dp"
        android:layout_gravity="right"
        app:srcCompat="@drawable/icon_profil" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:paddingHorizontal="30dp"
        android:showDividers="middle">

        <TextView
            android:id="@+id/txt_user_greet_home"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:fontFamily="@font/rubikmedium"
            android:textColor="@color/black"
            android:textSize="23sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_marginTop="-10dp"
                android:padding="-100dp"
                android:layout_width="290dp"
                android:layout_height="270dp"
                android:layout_gravity="center"
                android:src="@drawable/tempatmakan" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:padding="-100dp"
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:src="@drawable/iconpetir" />

                <TextView
                    android:layout_marginRight="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubikmedium"
                    android:textColor="@color/black"
                    android:text="@string/on"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:padding="-100dp"
                    android:layout_width="40dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:src="@drawable/kotak" />

                <TextView
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubikmedium"
                    android:textColor="@color/black"
                    android:text="@string/full"/>

            </LinearLayout>

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:layout_marginTop="20dp"
            android:layout_width="142dp"
            android:layout_height="wrap_content"
            android:background="@drawable/custom_button_feed"
            android:text="@string/feed"
            android:textColor="@color/black"
            android:fontFamily="@font/rubikmedium" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="20dp">

        <TextView
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/features"
            android:fontFamily="@font/rubikmedium"
            android:textColor="@color/black"
            android:background="@drawable/custom_line"
            android:paddingVertical="5dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="-10dp"
            android:padding="-10dp"
            android:src="@drawable/history_ui" />

        <ImageView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_margin="-10dp"
            android:padding="-10dp"
            android:src="@drawable/schedule_ui" />

    </LinearLayout>

</LinearLayout>